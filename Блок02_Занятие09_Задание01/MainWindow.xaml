<Window x:Class="Блок02_Занятие09_Задание01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Блок02_Занятие09_Задание01"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.CommandBindings>
        <CommandBinding x:Name="commandBindingColorChangeMenu" Command="local:MyCommand.routedUICommand" Executed="CommandBinding_Executed" />
        <CommandBinding Command="ApplicationCommands.Undo" Executed="Undo" />
    </Window.CommandBindings>
    <Grid >
        <Menu x:Name="menu" VerticalAlignment="Top" Padding="5">
            <MenuItem Header="Дейтсвия">
                <MenuItem x:Name="ColorChangeMenu" Header="Изменить цвет" Command="local:MyCommand.routedUICommand"/>
                <Separator/>
                <MenuItem x:Name="ColorChangeCancel" Header="Отменить" Command="ApplicationCommands.Undo"/>
            </MenuItem>
        </Menu>
        <Grid x:Name="ColorChangeGrid" Margin="50" Background="{Binding ColorChangeMenu}">
            <Button x:Name="buttonChangeColor" Content="{Binding ElementName=ColorChangeMenu, Path=Header}" 
                    Width="150" Height="50" HorizontalAlignment="Left" Margin="100" Command="local:MyCommand.routedUICommand" />
            <Button x:Name="buttonChangeColorCancel" Content="{Binding ElementName=ColorChangeCancel, Path=Header}" 
                    Width="150" Height="50" HorizontalAlignment="Right" Margin="100" Command="ApplicationCommands.Undo" />
        </Grid>


    </Grid>
</Window>
