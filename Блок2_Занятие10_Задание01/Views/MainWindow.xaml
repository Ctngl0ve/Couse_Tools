<Window x:Class="Блок2_Занятие10_Задание01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Блок2_Занятие10_Задание01"
        xmlns:ViewModels="clr-namespace:Блок2_Занятие10_Задание01.ViewModels"
        xmlns:localConvert="clr-namespace:Блок2_Занятие10_Задание01.Models"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <ViewModels:MainWindowViewModels/>
    </Window.DataContext>
    <Window.Resources>
        <localConvert:YesOrNotConverter x:Key="ColorYesOtNotCon"/>
        <Style x:Key="textBlock_2" TargetType="TextBlock">
            <Setter Property="Margin" Value="15"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Grid.Column" Value="0"/>
        </Style>
        <Style x:Key="textBox_2" TargetType="TextBox">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="BorderBrush" Value="Pink"/>
        </Style>
    </Window.Resources>
    <StackPanel>
        <TextBlock Text="Форма входа" Padding="40" HorizontalAlignment="Center" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Логин" Style="{StaticResource textBlock_2}"/>
            <TextBox Text="{Binding UserName}"
                Grid.Column="1" Style="{StaticResource textBox_2}"/>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Пароль" Style="{StaticResource textBlock_2}"/>
            <TextBox Text="{Binding Password}"
                Grid.Column="1" Style="{StaticResource textBox_2}"/>
        </Grid>
        <Button Command="{Binding AddddCommand}" 
            Content="Войти" Width="100" Padding="5" Background="Pink"/>

        <Grid>
            <Border Background="{Binding IsSuccess, Converter={StaticResource ColorYesOtNotCon}}"
            HorizontalAlignment="Center" Width="200" Height="35"  Margin="15"/>
            <TextBlock Text="{Binding StatusMessage}"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                        />
        </Grid>
    </StackPanel>
</Window>
