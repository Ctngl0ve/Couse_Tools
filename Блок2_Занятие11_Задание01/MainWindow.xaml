<Window x:Class="Блок2_Занятие11_Задание01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Блок2_Занятие11_Задание01"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Grid>
            <local:CircularProgressBar 
                RotateTransformAgle="{Binding ElementName=sliderOut, Path=Value}" 
                TextOutValue="{Binding ElementName=sliderOut, Path=Value}"
                Height="150" Width="150"
            Margin="25" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                       />
        </Grid>
        <Slider x:Name="sliderOut"
            Minimum="0" Maximum="360" Value="0" 
                     Padding="5" Margin="50"/>
        <TextBox Text="{Binding ElementName=sliderOut, Path=Value, StringFormat={}Текущее значение: {0:N2}}" 
                 Padding="5" Margin="50" HorizontalAlignment="Center"  VerticalAlignment="Center" />
    </StackPanel>

</Window>
