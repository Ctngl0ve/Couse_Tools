<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:блок2_занятие8_задание2_8_1="clr-namespace:Блок2_Занятие8_Задание2_8_1">

    <!--<local:Priority x:Key="PriorityS"/>-->

    <DataTemplate x:Key="DDDQ_1">
        <Border x:Name="border_1" Padding="10" BorderThickness="1" CornerRadius="10" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Image x:Name="apylle" Grid.Column="0" Grid.Row="0" Grid.RowSpan="3"
                       Width="100" Height="100"
                    Source="{Binding Sourses}" />
                <TextBlock x:Name="Name" Grid.Column="1" Grid.Row="0" Text="{Binding Name}" 
                           Padding="5" FontWeight="Bold" />
                <TextBlock x:Name="Prise" Grid.Column="1" Grid.Row="1" Text="{Binding StringPrise}" 
                           Margin="5"/>
            </Grid>
        </Border>
        <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding Category}">
                <DataTrigger.Value>
                    <блок2_занятие8_задание2_8_1:CategoryList>БытоваяТехника</блок2_занятие8_задание2_8_1:CategoryList>
                </DataTrigger.Value>
                <Setter TargetName="border_1" Property="BorderBrush" Value="Red"/>
                <Setter TargetName="border_1" Property="Background" Value="#FFFFF8F8"/>
                <Setter TargetName="Name" Property="Foreground" Value="Red"/>
                <Setter TargetName="Name" Property="Opacity" Value="0.4"/>
                <Setter TargetName="Prise" Property="Foreground" Value="Black"/>
                <Setter TargetName="Prise" Property="Opacity" Value="0.7"/>
                <Setter TargetName="Prise" Property="FontWeight" Value="Light"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding Category}">
                <DataTrigger.Value>
                    <блок2_занятие8_задание2_8_1:CategoryList>Еда</блок2_занятие8_задание2_8_1:CategoryList>
                </DataTrigger.Value>
                <Setter TargetName="border_1" Property="BorderBrush" Value="Green"/>
                <Setter TargetName="border_1" Property="Background" Value="#FFF8FDF7"/>
                <Setter TargetName="Name" Property="Foreground" Value="Green"/>
                <Setter TargetName="Name" Property="Opacity" Value="0.4"/>
                <Setter TargetName="Prise" Property="Foreground" Value="Black"/>
                <Setter TargetName="Prise" Property="Opacity" Value="0.7"/>
                <Setter TargetName="Prise" Property="FontWeight" Value="Light"/>
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>

</ResourceDictionary>