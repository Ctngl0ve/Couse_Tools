<Window x:Class="Задание2_1_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Задание2_1_1"
        mc:Ignorable="d"
        Title="MainWindow" Height = "250" Width = "250">
    <Grid x:Name = "MyGrid" >
        <Button x:Name="button_1"
            Content = "Жмяк!" 
            HorizontalAlignment = "Center"
            VerticalAlignment = "Center"
            Margin = "0,50, 0,0" 
            Width = "70" 
            Height = "25" 
            FontSize = "14" 
            FontFamily = "Futura PT Light" 
            Opacity = "0.8" 
            Background  ="#FFE0DEDE"
            Click="Button_Click"
            MouseLeftButtonDown="TextBlock1_MouseLeftButtonDown"
            MouseRightButtonDown="TextBlock1_MouseRightButtonDown"
            ToolTip="ЛКМ - увеличивает счетчки на 1\ ПКМ - обнуляет счетчик" />
               
        <TextBlock x:Name = "TextBlock1"
            Text = "0" 
            HorizontalAlignment = "Center"
            VerticalAlignment = "Center" 
             Margin = "0,-50, 0,0"
            Width = "70" 
            Height = "25" 
            FontSize = "14" 
            FontFamily = "Futura PT Light"
            TextWrapping = "Wrap"
            FlowDirection="RightToLeft"
            />
    </Grid>
</Window>
