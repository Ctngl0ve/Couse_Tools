<Window x:Class="Задание2_2_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Задание2_2_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Closing="Window_Closing" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" 
                    Content="Открыть" 
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Margin="15,20,10,10" Padding="10" Click="Open_Click"  
                    />
            <Button Grid.Column="1" 
                    Content="Сохранить как" 
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                     Margin="15,20,10,10" Padding="10" Click="Save_Click"
                    />
            <Button Grid.Column="2" 
                    Content="О программе" 
                    HorizontalAlignment="Left" VerticalAlignment="Center"
                      Margin="15,20,10,10" Padding="10" Click="About_Click"
                    />
        </Grid>
        <TextBox x:Name ="Textbox1"
                 Grid.Row="1" 
                 Text="TextBox"
                 VerticalScrollBarVisibility="Auto" HorizontalContentAlignment="Stretch" 
                 Margin="10,10,10,5" Padding="10"
                 TextWrapping="Wrap" 
                    />

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusBar" Text="Используй меня полностью"/>
            </StatusBarItem>
        </StatusBar>
                  
            
           




    </Grid>
</Window>
