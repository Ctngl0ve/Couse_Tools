<Window x:Class="Задание2_5_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Задание2_5_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="InteractiveButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Style.Triggers>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsMouseOver" Value="True"/>
                        <Condition Property="IsEnabled" Value="False"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="{DynamicResource DisabledColor}"/>
                </MultiTrigger>
                
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <StackPanel>
        <TextBlock Text="Настройка приложения"  Style="{DynamicResource HeaderTextStyleTextBlock}"/>
        <Button x:Name="buttonSave" Content="Сохранить" Style="{DynamicResource InteractiveButtonStyle}"
                Click="buttonSave_Click"/>
        <Button x:Name="buttonClose" Content="Отменить" Style="{DynamicResource InteractiveButtonStyle}"/>
        <CheckBox x:Name="ToggleButton" Content="Включить режим" FontSize="20"/>
        <Button x:Name="buttonNew" Content="Специальная кнопка" Style="{DynamicResource InteractiveButtonStyle}"
                 IsEnabled="{Binding IsChecked, ElementName=ToggleButton}"/>
    </StackPanel>
</Window>
